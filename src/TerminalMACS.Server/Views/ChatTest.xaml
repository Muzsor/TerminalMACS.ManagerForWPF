<UserControl
    x:Class="TerminalMACS.Server.Views.ChatTest"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:markup="https://codewf.com"
    xmlns:language="clr-namespace:Localization"
    xmlns:cusControls="clr-namespace:TerminalMACS.Controls.Controls;assembly=TerminalMACS.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    d:DesignHeight="450"
    d:DesignWidth="800"
    mc:Ignorable="d">
    <Grid Background="White">
        <Grid.RowDefinitions>
            <RowDefinition Height="35" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <StackPanel
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Orientation="Horizontal">
            <TextBlock Text="{markup:I18n {x:Static language:ChatTest.MockSortCount}}" />
            <TextBox
                x:Name="tbTestNumberCount"
                Width="50"
                Margin="0,0,20,0"
                Text="20" />
            <TextBlock Text="{markup:I18n {x:Static language:ChatTest.ExchangeSleepTime}}" />
            <TextBox
                x:Name="tbSleepMs"
                Width="50"
                Margin="0,0,20,0"
                Text="150" />
            <Button
                x:Name="btnInitNumber"
                Click="InitNumber_Click"
                Content="{markup:I18n {x:Static language:ChatTest.Init}}" />
            <Button
                x:Name="btnBeginSort"
                Margin="20,0"
                Click="Begin_Click"
                Content="{markup:I18n {x:Static language:ChatTest.Start}}" />
        </StackPanel>
        <Grid Grid.Row="1" Margin="0,0,20,0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <Grid Grid.ColumnSpan="3">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <TextBlock
                    x:Name="tbSortName1"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="22"
                    Foreground="#FFF10E0E" />
                <cusControls:WpfChart
                    x:Name="chart1"
                    Grid.Row="1"
                    IsNeedItemSourceChangeAnimation="False" />
            </Grid>


            <Grid Grid.Column="4" Grid.ColumnSpan="3">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <TextBlock
                    x:Name="tbSortName2"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="22"
                    Foreground="#FFF10E0E" />
                <cusControls:WpfChart
                    x:Name="chart2"
                    Grid.Row="1"
                    IsNeedItemSourceChangeAnimation="False" />
            </Grid>


            <Grid Grid.Row="1" Grid.ColumnSpan="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <TextBlock
                    x:Name="tbSortName3"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="22"
                    Foreground="#FFF10E0E" />
                <cusControls:WpfChart
                    x:Name="chart3"
                    Grid.Row="1"
                    IsNeedItemSourceChangeAnimation="False" />
            </Grid>


            <Grid
                Grid.Row="1"
                Grid.Column="2"
                Grid.ColumnSpan="2"
                Margin="20,0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <TextBlock
                    x:Name="tbSortName4"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="22"
                    Foreground="#FFF10E0E" />
                <cusControls:WpfChart
                    x:Name="chart4"
                    Grid.Row="1"
                    IsNeedItemSourceChangeAnimation="False" />
            </Grid>

            <Grid
                Grid.Row="1"
                Grid.Column="4"
                Grid.ColumnSpan="2">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>
                <TextBlock
                    x:Name="tbSortName5"
                    HorizontalAlignment="Center"
                    VerticalAlignment="Center"
                    FontSize="22"
                    Foreground="#FFF10E0E" />
                <cusControls:WpfChart
                    x:Name="chart5"
                    Grid.Row="1"
                    IsNeedItemSourceChangeAnimation="False" />
            </Grid>
        </Grid>
    </Grid>
</UserControl>